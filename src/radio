#!/usr/bin/bash

appname=${0##*/}
radios="$HOME/.radios"
default_volume=30

error_exit()
{
    msg="$1"
    test "$msg" != "" || msg="an error occurred"
    printf "*** $msg\nabort...\n"
    exit 1
}

usage_exit()
{
    echo "*** usage :"
    echo "$appname -list"
    echo "$appname -add \"name\" \"https://my/radio/stream\""
    echo "$appname -show \"name\""
    echo "$appname -remove \"name\""
    echo "$appname \"name\""
    echo "$appname \"https://my/radio/stream\""
    echo "$appname \"path/to/file.mp3\""
    echo "$appname -stop"
    echo "abort..."
    exit 1
}

add_file()
{
    filepath="$radios/$1"
    printf "$2" > "$filepath"
}

play_file()
{
    echo "play $1"
    opt_url=""
    opt_volume=$default_volume
    if [[ -f "$1" ]]; then
        opt_url="$1"
    elif [[ "$1" == "http://"* ]] || [[ "$1" == "https://"* ]]; then
        opt_url="$1"
    else
        filepath="$radios/$1"
        test -f "$filepath" || error_exit "invalid file"
        url=$(head -n 1 "$filepath")
        parse_file "$filepath"
    fi
    pkill ffplay
    ffplay -nodisp -volume "$opt_volume" "$opt_url" > /dev/null 2>&1 &
}

parse_file()
{
    IFS="="
    while read -r key val; do
        value=${val//\"/}
        case "$key" in
            url)
                opt_url="$value"
                #echo "$opt_url"
            ;;
            volume)
                opt_volume="$value"
                #echo "$opt_volume"
            ;;
            *)
            ;;
        esac
    done < "$1"
}

probe_file()
{
    echo "infos: $1"
    filepath="$radios/$1"
    test -f "$filepath" || error_exit "invalid file"
    url=$(head -n 1 "$filepath")
    ffprobe -hide_banner "$url"
}

test -d "$radios" || mkdir -p "$radios"
test "$#" -gt 0 || usage_exit

while (($#)); do
    case "$1" in
        -add)
            add_file "$2" "$3"
            exit 0
        ;;
        -infos)
            test "$#" -eq 2 || usage_exit
            probe_file "$2"
            exit 0
        ;;
        -list)
            ls -la "$radios"
            exit 0
        ;;
        -show)
            test "$#" -eq 2 || usage_exit
            cat "$radios/$2"
            echo
            exit 0
        ;;
        -remove)
            test "$#" -eq 2 || usage_exit
            rm "$radios/$2"
            exit 0
        ;;
        -stop)
            pkill ffplay
            exit 0
        ;;
        *)
            play_file "$1"
            exit 0
        ;;
    esac
    shift
done



#!/usr/bin/bash

appname=${0##*/}
radios="$HOME/.radios"

error_exit()
{
    msg="$1"
    test "$msg" != "" || msg="an error occurred"
    printf "*** $msg\nabort...\n"
    exit 1
}

usage_exit()
{
    echo "*** usage :"
    echo "$appname -list"
    echo "$appname -add \"name\" \"https://my/radio/stream\""
    echo "$appname -remove \"name\""
    echo "$appname \"name\""
    echo "$appname \"https://my/radio/stream\""
    echo "$appname \"path/to/file.mp3\""
    echo "$appname -stop"
    echo "abort..."
    exit 1
}

add_file()
{
    filepath="$radios/$1"
    printf "$2" > "$filepath"
}

play_file()
{
    echo "play $1"
    local url=""
    if [[ -f "$1" ]]; then
        url="$1"
    elif [[ "$1" == "http://"* ]] || [[ "$1" == "https://"* ]]; then
        url="$1"
    else
        filepath="$radios/$1"
        test -f "$filepath" || error_exit "invalid file"
        url=$(head -n 1 "$filepath")
    fi
    pkill ffplay
    ffplay -nodisp -volume 40 "$url" > /dev/null 2>&1 &
}

test -d "$radios" || mkdir -p "$radios"
test "$#" -gt 0 || usage_exit

while (($#)); do
    case "$1" in
        -add)
            add_file "$2" "$3"
            exit 0
        ;;
        -remove)
            test "$#" -eq 2 || usage_exit
            rm "$radios/$2"
            exit 0
        ;;
        -list)
            ls -la "$radios"
            exit 0
        ;;
        -stop)
            pkill ffplay
            exit 0
        ;;
        *)
            play_file "$1"
            exit 0
        ;;
    esac
    shift
done


